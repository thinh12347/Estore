<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD
Tiles Configuration 3.0//EN"
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<!--user layout -->
	<definition name="user.definition"
		template="/WEB-INF/views/layout.jsp">
		<put-attribute name="head"
			value="/WEB-INF/views/layout/head.jsp"></put-attribute>
		<put-attribute name="menu"
			value="/WEB-INF/views/layout/menu.jsp"></put-attribute>
		<put-attribute name="aside"
			value="/WEB-INF/views/layout/aside.jsp"></put-attribute>
		<put-attribute name="body" value=""></put-attribute>
	</definition>
	<definition name="*/*" extends="user.definition">
		<put-attribute name="body"
			value="/WEB-INF/views/{1}/{2}.jsp"></put-attribute>

	</definition>
	<!--admin layout -->
	<definition name="admin.definition"
		template="/WEB-INF/views/admin/layout.jsp">
		<put-attribute name="head"
			value="/WEB-INF/views/admin/layout/head.jsp"></put-attribute>
		<put-attribute name="menu"
			value="/WEB-INF/views/admin/layout/menu.jsp"></put-attribute>
		<put-attribute name="body" value=""></put-attribute>
	</definition>
	<definition name="admin/*/*" extends="admin.definition">
		<put-attribute name="body"
			value="/WEB-INF/views/admin/{1}/{2}.jsp"></put-attribute>

	</definition>

</tiles-definitions>